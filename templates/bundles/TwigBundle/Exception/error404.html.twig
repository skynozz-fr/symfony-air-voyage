{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block body %}
    <div class="container d-flex flex-column justify-content-center align-items-center">
        <div class="card text-center" style="width: 100%; max-width: 600px;">
            <div class="card-body">
                <h1 class="card-title display-1 text-danger">404</h1>
                <h2 class="card-subtitle mb-4 text-muted">Page non trouvée</h2>
                <img src="{{ asset('assets/images/error/error404.jpg') }}" class="img-fluid rounded mb-4" alt="Page non trouvée">
                <p class="card-text">Oups ! Nous ne pouvons pas trouver la page que vous recherchez.</p>
                <a href="{{ path('app_home') }}" class="btn btn-dark btn-lg">Retourner à la page d'accueil</a>
            </div>
        </div>
    </div>
{% endblock %}